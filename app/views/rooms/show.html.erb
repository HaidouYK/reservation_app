<div class="container room-show">
    <div class="row">
        <div class="col-md-8">
            <%= image_tag @room.room_image, src: "部屋画像", onerror: "this.onerror=null;this.src='room01.jpeg'", class: "room-show-image" %>

            <div class="room-show-detile">
                <div class="room-show-detile-icon">
                    <%= link_to image_tag("default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpeg", class: "host-icon"), root_path %>
                </div>
                <div class="room-show-profile">
                    <p class="room-show-profile-name"><%= @room.room_name %></p>
                    <p class="room-show-profile-address"><%= @room.room_address %></p>
                </div>
            </div>
            <p class="room-show-detile-content"><%= @room.room_profile %></p>
        </div>

        <div class="col-md-4">
            <div class="room-show-nav">
                <h5 class="price-icon"><%= @room.room_price %> / 日</h5>
                <div class="room-show-date-select">
                    <%= form_with url: new_reservation_path, local: true do |f| %>
                        <%= f.label :start_date, "開始日" %>
                        <%= f.date_field :start_date, class: "form-control mb-4" %>

                        <%= f.label :end_date, "終了日" %>
                        <%= f.date_field :end_date, class: "form-control mb-4" %>

                        <%= f.label :peoples, "人数" %>
                        <%= f.number_field :peoples, class: "form-control mb-4" %>

                        <%= f.hidden_field :room_id, value: @room.id %>

                        <% if user_signed_in? %>
                            <%= f.submit "予約する", class: "btn btn-primary form-control" %>
                        <% else %>
                            <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary form-control" %>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>