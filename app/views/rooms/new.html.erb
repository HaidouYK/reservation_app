<div class="container-fiuld room-new">
    <div class="row">

        <%= render "shared/partial_room" %>

        <div class="col-lg-10 room-view">
            <div class="room-view-box">
                <%= form_with model: @room, url: rooms_path, class: "new_room", enctype: "multipart/form-data", local: true do |f| %>
                    <%= f.hidden_field  :user_id, value: current_user.id %>
                    <div class="update-content"> 
                        <div class="row">
                            <h5>ルーム情報登録</h5>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.label :room_name, "ルーム名", class: "col-md-3 required-a" %>
                            <%= f.text_field :room_name, class: "form-control mb-4 col-md-9", placeholder: "ルーム名を入力" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.label :room_profile, "ルーム紹介", class: "col-md-3 required-a" %>
                            <%= f.text_area :room_profile, rows: "5", class: "form-control mb-4 col-md-9", placeholder: "ルーム説明を入力" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.label :room_price, "料金", class: "col-md-3 required-a" %>
                            <%= f.number_field :room_price, class: "form-control mb-4 col-md-9", placeholder: "一日あたりの料金を入力" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.label :room_address, "住所", class: "col-md-3 required-a" %>
                            <%= f.text_field :room_address, class: "form-control mb-4 col-md-9", placeholder: "住所を入力" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.label :room_image, "ルーム画像", class: "col-md-3 required-a" %>
                            <%= f.file_field :room_image, class: "mb-4 col-md-9", placeholder: "ルーム画像をアップロード" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.submit "登録", class: "col-md-2 btn btn-primary mx-3" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>