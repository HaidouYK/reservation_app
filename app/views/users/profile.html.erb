<div class="container-fiuld user">
    <div class="row">

        <%= render"shared/partial" %>

        <div class="col-lg-10 user-view">
            <div class="user-view-box">
                <div class="update-content">
                    <div class="row">
                        <h5>プロフィール</h5>
                    </div>
                </div>

                <%= form_with model: @user, url: users_profile_path, class: "edit_user", enctype: "multipart/form-data", local: true do |f| %>
                    <div class="update-content">
                        <div class="row">
                            <div class="col-md-6 offset-md-3">
                                <div class="icon-box">
                                    <% if current_user.avatar.attached? %>
                                        <%= image_tag current_user.avatar, class: "icon-image host-icon", size: '65x65' %>
                                    <% else %>
                                        <%= image_tag "default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpeg", class: "icon-image host-icon", size: '65x65' %>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="update-content">
                        <div class="row">
                            <%= f.label :アイコン画像, class: "col-md-3 required-a" %>
                            <% if current_user.avatar.attached? %>
                                <%= f.file_field :avatar, class: "mb-4 col-md-9", placeholder: "アイコン画像をアップロード" %>
                            <% else %>
                                <div class="field_with_errors">
                                    <%= f.file_field :avatar, class: "mb-4 col-md-9", placeholder: "アイコン画像をアップロード" %>
                                </div>
                            <% end %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.label :名前, class: "col-md-3 required-a" %>
                            <% if @user.user_name.present? %>
                                <%= f.text_field :user_name, class: "form-control mb-4 col-md-9", placeholder: "名前を入力" %>
                            <% else %>
                                <div class="field_with_errors">
                                    <%= f.text_field :user_name, class: "form-control mb-4 col-md-9", placeholder: "名前を入力" %>
                                </div>
                            <% end %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.label :自己紹介, class: "col-md-3 required-a" %>
                            <% if @user.user_profile.present? %>
                                <%= f.text_area :user_profile, rows: "5", class: "form-control mb-4 col-md-9", placeholder: "自己紹介を入力" %>
                            <% else %>
                                <div class="field_with_errors">
                                    <%= f.text_area :user_profile, rows: "5", class: "form-control mb-4 col-md-9", placeholder: "自己紹介を入力" %>
                                </div>
                            <% end %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.submit "更新", class: "col-md-2 btn btn-primary mx-3" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>