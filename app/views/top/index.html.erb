<div class="top">
    <div class="top-main">
        <div class="container">
            <div class="row col-lg-6">
                <div class="form-fream">
                    <div class="form-area">
                        <p class="form-area-title mb-4">Potepan Shareでまだ体験したことのない旅をしよう</p>

                        <%= form_with url: search_area_rooms_path, local: true, method: :get do |f| %>
                            <%= f.label :エリア %><br />
                            <%= f.text_field :keyword, placeholder: "東京", class: "form-control mb-4" %>
                            <%= f.submit "探す", class: "form-control btn-primary mb-4" %>
                        <% end %>    
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="panel-area m-5">
            <h1 class="section-title">おすすめのエリア</h1>

            <div class="row">
                <div class="panel-item col-lg-3 col-6">
                    <span>東京</span>
                    <%= link_to image_tag("img_tokyo.jpeg", class: "panel-image"), '/rooms/search_area?keyword=東京&commit=Save+' %> <!-- 東京検索の結果 -->
                    <div class="shadow"></div>
                </div>

                <div class="panel-item col-lg-3 col-6">
                    <span>大阪</span>
                    <%= link_to image_tag("img_osaka.jpeg", class: "panel-image"), '/rooms/search_area?keyword=大阪&commit=Save+' %> <!-- 大阪検索の結果 -->
                    <div class="shadow"></div>
                </div>

                <div class="panel-item col-lg-3 col-6">
                    <span>京都</span>
                    <%= link_to image_tag("img_kyoto.jpeg", class: "panel-image"), '/rooms/search_area?keyword=京都&commit=Save+' %><!-- 京都検索の結果 -->
                    <div class="shadow"></div>
                </div>

                <div class="panel-item col-lg-3 col-6">
                    <span>札幌</span>
                    <%= link_to image_tag("img_sapporo.jpeg", class: "panel-image"), '/rooms/search_area?keyword=札幌&commit=Save+' %><!-- 札幌検索の結果 -->
                    <div class="shadow"></div>
                </div>
            </div>
        </div>
    </div>
</div>