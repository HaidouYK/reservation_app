<div class="container reservations-new">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="reservations-new-nav">
                <h4 class="reservations-new-check-content">予約内容確認</h4>

                <h5 class="price-icon"><%= @room.room_price %> / 日</h5>
                <div class="reservations-new-date-select">
                    <%= form_with model: @reservation, class: "new-reservation", local: true do |f| %>
                        <%= f.hidden_field :user_id, value: current_user.id %>
                        
                        <%= f.hidden_field :room_id, value: @room.id %>

                        <%= f.label :start_date, "開始日" %>
                        <%= f.text_field :start_date, class: "form-control mb-4", value: @reservation.start_date, readonly: true %>

                        <%= f.label :end_date, "終了日" %>
                        <%= f.text_field :end_date, class: "form-control mb-4", value: @reservation.end_date, readonly: true %>

                        <h6 class="reservations-new-check-content">使用日数 : <%= @day %>日</h6>
                        
                        <h6 class="reservations-new-check-content">人数 : <%= @reservation.peoples %>人</h6>
                        <%= f.hidden_field :peoples, value: @reservation.peoples %>

                        <%= f.label :sum_price, "合計金額" %>
                        <%= f.text_field :sum_price, class: "form-control mb-4", value: @price, readonly: true %>

                        <p class="reservations-new-check-content">上記の内容でよろしければ「予約を確定」を押してください</p>

                        <%= f.submit "予約を確定", class: "btn btn-primary form-control my-3" %>

                        <%= link_to "ルーム詳細に戻る", room_path(@room.id), class: "btn btn-secondary form-control" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>