<dic class="container-fiuld reservations">
    <h4 class="pb-4">予約済みルーム一覧</h4>
    <table>
        <thead>
            <tr align="center">
                <th>ルーム画像</th>
                <th>ルーム名</th>
                <th>ルーム紹介</th>
                <th>合計料金</th>
                <th>開始日</th>
                <th>終了日</th>
                <th>予約確定日時</th>
            </tr>
        </thead>

        <tbody>
            <% @reservations.each do |reservation| %>
                <tr>
                    <td>
                        <%= link_to image_tag(reservation.room.room_image, size: '240x140', class: "reservations-image", onerror: "this.onerror=null;this.src='room01.jpeg'"), room_path(reservation.room.id) %>
                    </td>
                    <td class="posts-name">
                        <%= link_to reservation.room.room_name, room_path(reservation.room_id) %>
                    </td>
                    <td class="posts-content"><%= reservation.room.room_profile %></td>
                    <td class="price-icon"><%= reservation.sum_price %></td>
                    <td><%= reservation.start_date %></td>
                    <td><%= reservation.end_date %></td>
                    <td><%= reservation.created_at %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>